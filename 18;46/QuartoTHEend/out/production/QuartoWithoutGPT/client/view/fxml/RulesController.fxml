<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.TextFlow?>

<BorderPane styleClass="rule-explanation"
            stylesheets="@../style.css"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.controllers.RulesController"
            prefWidth="550"
            prefHeight="550">

    <center>
        <TextFlow fx:id="rulesFlow"
                  styleClass="rules-text"
                  style="-fx-padding: 15;"/>
    </center>

    <bottom>
        <Button onAction="#exitToMainMenu" text="Exit" />
    </bottom>
</BorderPane>
