<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="login-background" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.StatisticsController">

    <!-- VBox במרכז שמכיל את הטבלה ואת הכפתור Exit -->
    <center>
        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 0 0 5 0;">
            <TableView fx:id="statsTable">
                <columns>
                    <TableColumn fx:id="usernameColumn" prefWidth="120" style="-fx-alignment: CENTER;" text="Username" />
                    <TableColumn fx:id="gamesPlayedColumn" prefWidth="80" style="-fx-alignment: CENTER;" text="Games" />
                    <TableColumn fx:id="winsColumn" prefWidth="70" style="-fx-alignment: CENTER;" text="Wins" />
                    <TableColumn fx:id="drawsColumn" prefWidth="70" style="-fx-alignment: CENTER;" text="Draws" />
                    <TableColumn fx:id="lossesColumn" prefWidth="70" style="-fx-alignment: CENTER;" text="Losses" />
                    <TableColumn fx:id="winPercColumn" prefWidth="80" style="-fx-alignment: CENTER;" text="Win %" />
                    <TableColumn fx:id="rankingColumn" prefWidth="90" style="-fx-alignment: CENTER;" text="Ranking" />
                </columns>
            </TableView>

            <!-- כפתור Exit ממורכז עם ריווח -->
            <Button onAction="#exitScreen" prefHeight="31.0" prefWidth="62.0" style="-fx-font-size: 16px; -fx-padding: 10px 10px;" text="Exit" />
        </VBox>
    </center>

</BorderPane>
